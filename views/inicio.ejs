<%-include('template/cabecera',{tituloweb: 'INICIO'}) %>


    <div id="contenedor">
        <%- include('template/navbar') %>

        <div id="titulo">
            <h1>INICIO</h1>
        </div>
        
        <div id="inicio">
            <div class="proyectosVigentes">
                <h4>PROYECTOS VIGENTES</h4>
            </div>
            <div class="recordatorios">
                <h4>RECORDATORIOS</h4>
            </div>
            <div class="bitacora">
                <div>
                    <h4>BITACORA</h4>
                </div>
                
                <div id="tbbita">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>FECHA</th>
                                <th>NOTA</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach((bitacora) => { %>
                                <tr>
                                    <td><%-bitacora.idbita%></td>
                                    <td><%-bitacora.fechabita%></td>
                                    <td><%-bitacora.notabita%></td>
                                    <td>
                                        <a href="/deletebita/<%=bitacora.idbita%>" onclick="return confirm('Â¿Desea eliminar este registro?')" id="btnEli">X</a>
                                    </td>
                                </tr>                                 
                            <% }) %>
                        </tbody>
                        
                    </table>
                </div>  
                <div id="formbita">
                    <form action="/savebita" method="post" >
                        <textarea rows="4" id="notabita" name="notabita" maxlength="200" placeholder="Escribe tu nota aqui:" required></textarea>
                        <br>
                        <p>Fecha del mensaje:</p>
                        <input type="date" id="fechabita" name="fechabita" min="2022-01-01" max="2050-12-31" required>
                        <input type="submit" value="GUARDAR">
                    </form>
                </div>  
            </div> 
        </div>
        
    </div>

<%- include('template/piecera') %> 






